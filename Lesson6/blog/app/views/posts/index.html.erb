<table class="table table-striped table-hover">
  <thead>
    <col width="150">
    <col width="*">
    <col width="20">
    <col width="20">
    <col width="20">
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.text %></td>
        <td><%= link_to '',post, class:"glyphicon glyphicon-eye-open" %></td>
        <td><%= link_to '',  edit_post_path(post), class:"glyphicon glyphicon-pencil" %></td>
        <td><%= link_to '', post, method: :delete,class:"glyphicon glyphicon-trash",  data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class:"btn btn-primary" %>
